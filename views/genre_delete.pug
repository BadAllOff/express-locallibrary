extends layout

block content
  h1 #{title}: #{genre.name}

  if genre_books.length
    p #[strong This genre is used by the following books. Delete the books before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each book in genre_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}

  else
    p Do you really want to delete this Genre?

    form(method='POST')
      input(name='id' type='hidden' value=genre._id)
      button.btn.btn-primary(type='submit') Delete

